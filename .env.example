# RuleIQ Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# DO NOT commit .env.local to version control

# ===================================================================
# APPLICATION SETTINGS
# ===================================================================
ENVIRONMENT=development
DEBUG=true
APP_NAME=RuleIQ
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
API_VERSION=v1

# ===================================================================
# DATABASE CONFIGURATION
# ===================================================================
# Your Neon PostgreSQL database URL
DATABASE_URL=postgresql+asyncpg://username:password@your-neon-host/database?sslmode=require

# Test database (optional - for local testing)
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ruleiq_test

# Database connection settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ===================================================================
# REDIS CONFIGURATION
# ===================================================================
REDIS_API=your_redis_api_key
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ===================================================================
# JWT AUTHENTICATION
# ===================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================================================================
# API CONFIGURATION
# ===================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2

# ===================================================================
# AI & EXTERNAL SERVICES
# ===================================================================
OPENAI_API_KEY=your_openai_api_key
GOOGLE_AI_API_KEY=your_google_ai_api_key

# ===================================================================
# SECURITY SETTINGS
# ===================================================================
SECRET_KEY=your_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key
FERNET_KEY=your_fernet_key_here

# ===================================================================
# FEATURE FLAGS
# ===================================================================
ENABLE_AI_FEATURES=true
ENABLE_OAUTH=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOAD=true
